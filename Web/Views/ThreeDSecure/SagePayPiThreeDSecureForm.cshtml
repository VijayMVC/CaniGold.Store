@model SagePayPiThreeDSecureViewModel

<form id="the-acsurl-form" action="@Model.AcsUrl" method="post">
	<input type="hidden" name="TermUrl" value="@Model.TermUrl" />
	<input type="hidden" name="PaReq" value="@Model.PaReq" />
	<input type="hidden" name="MD" value="@Model.Md" />
	<div class="minicart-loading-overlay">
		<div class="minicart-overlay"></div>
		<div class="minicart-loading">
			<div class="minicart-loading-message">@Html.StringResource("sagepaypi.threedsecure.loading")</div>
			<div class="loading-animation loading-style-dark"></div>
		</div>
	</div>
</form>

@Html.RegisterInlineScript(
	@<script>
		(function ($) {
			$('#the-acsurl-form').submit();
		})(adnsf$);
	</script>)

@model MinicartViewModel

@if(Model.CartItems == null || Model.CartItems.Count() == 0)
{
	<div class="empty-mini-cart-text">
		@Html.Topic("EmptyCartText")
	</div>
}
else
{
	using(Html.BeginForm(
		actionName: ActionNames.UpdateMinicart,
		controllerName: ControllerNames.Minicart,
		routeValues: new
		{
			cartType = CartTypeEnum.ShoppingCart
		},
		method: FormMethod.Post,
		htmlAttributes: new
		{
			id = "minicart-form",
			@class = "minicart-form"
		}))
	{
		<div class="minicart-items">
			@Html.EditorForMany(model => model.CartItems, EditorTemplateNames.MiniCartItem)
		</div>
	}
}
